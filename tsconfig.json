{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "nodenext",
        "lib": ["dom", "es2015.proxy", "es2021.weakref"],
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
        "outDir": "./dist/types",
        "removeComments": true,
        "downlevelIteration": true,
        "strict": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "paths": {
            "node_modules/@beforesemicolon/html-parser/dist/Doc.js": [
                "./src/Doc"
            ]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
