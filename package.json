{
  "name": "@beforesemicolon/html",
  "version": "0.1.3",
  "description": "Simple, Powerful, and Dynamic HTML Template System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:min": "esbuild `find src \\( -name '*.ts' ! -name '*.spec.ts' ! -name 'client.ts' \\)` --outdir=dist --platform=node --format=cjs --keep-names --minify --target=esnext\n",
    "build:browser": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=esnext --outfile=dist/html-client.min.js",
    "build": "rm -rf dist && tsc && npm run build:min && npm run build:browser"
  },
  "author": "Elson Correia",
  "license": "BSD-3-Clause",
  "keywords": ["html", "web components", "javascript", "html renderer", "web"],
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.1.0",
    "core-js": "^3.31.0",
    "esbuild": "^0.17.18",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
