{
    "name": "@beforesemicolon/markup",
    "version": "0.10.0",
    "description": "HTML Templating System",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js"
    },
    "typesVersions": {
        "*": {
            "*": [
                "dist/*"
            ]
        }
    },
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "docs:css-watch": "nodemon --watch docs-src -e scss --exec 'npm run docs:css'",
        "docs:css": "node-sass docs-src/stylesheets -o docs/stylesheets --output-style compressed",
        "docs:watch": "rm -rf docs && nodemon --watch docs-src -e ts,json --exec 'npm run docs:build'",
        "docs:build": "ts-node docs-src/build",
        "build:docs": "rm -rf docs && npm-run-all docs:build docs:css",
        "build:min": "esbuild `find src \\( -name '*.ts' ! -name '*.spec.ts' ! -name 'client.ts' \\)` --outdir=dist --platform=node --format=cjs --keep-names --target=esnext",
        "build:browser": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=esnext --outfile=dist/client.js",
        "build": "rm -rf dist && npm-run-all lint test && tsc && npm-run-all build:min build:browser",
        "lint": "eslint ./src && prettier --check .",
        "format": "eslint ./src --fix && prettier --write ."
    },
    "author": "Elson Correia",
    "license": "BSD-3-Clause",
    "repository": {
        "url": "https://github.com/beforesemicolon/markup",
        "type": "git"
    },
    "keywords": [
        "html",
        "templating systems"
    ],
    "funding": {
        "url": "https://github.com/sponsors/beforesemicolon",
        "type": "github"
    },
    "devDependencies": {
        "@types/highlight.js": "^10.1.0",
        "@types/jest": "^29.5.1",
        "@types/jsdom": "^21.1.1",
        "@types/jsdom-global": "^3.0.6",
        "@types/minify": "^9.1.3",
        "@types/node": "^20.1.0",
        "@types/node-sass": "^4.11.6",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "core-js": "^3.31.0",
        "esbuild": "^0.17.18",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "global-jsdom": "^9.1.0",
        "highlight.js": "^11.9.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "jsdom": "^22.1.0",
        "minify": "^10.5.2",
        "node-sass": "^9.0.0",
        "nodemon": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@beforesemicolon/html-parser": "*"
    }
}
