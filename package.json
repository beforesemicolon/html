{
  "name": "@beforesemicolon/html",
  "version": "0.2.5-beta",
  "description": "Simple Reactive HTML Template System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf docs && rm -rf dist",
    "local": "nodemon --watch src -e ts --exec 'npm run build:browser'",
    "local:docs": "nodemon --watch docs-src -e ts,scss,svg,json --exec 'npm run build:docs'",
    "build:docs": "ts-node scripts/build-docs && node-sass docs-src/stylesheets -o docs/stylesheets --output-style compressed && cp -r docs-src/assets docs",
    "build:min": "esbuild `find src \\( -name '*.ts' ! -name '*.spec.ts' ! -name 'client.ts' \\)` --outdir=dist --platform=node --format=cjs --keep-names --target=esnext",
    "build:browser": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=esnext --outfile=dist/client.js",
    "build": "npm-run-all lint test clean && tsc && npm-run-all build:min build:browser build:docs",
    "lint": "eslint ./src && prettier --check ./src",
    "format": "eslint ./src --fix && prettier --write ./src"
  },
  "author": "Elson Correia",
  "license": "BSD-3-Clause",
  "keywords": [
    "html",
    "web components",
    "javascript",
    "html renderer",
    "web"
  ],
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/jsdom-global": "^3.0.6",
    "@types/minify": "^9.1.3",
    "@types/node": "^20.1.0",
    "@types/node-sass": "^4.11.6",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "core-js": "^3.31.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "global-jsdom": "^9.1.0",
    "highlight.js": "^11.9.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "minify": "^10.5.2",
    "node-sass": "^9.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@beforesemicolon/html-parser": "*"
  }
}
