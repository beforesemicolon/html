{
  "name": "@beforesemicolon/html",
  "version": "0.1.38-beta",
  "description": "Simple Reactive HTML Template System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "local": "nodemon --watch src -e ts --exec 'npm run build:browser'",
    "build:min": "esbuild `find src \\( -name '*.ts' ! -name '*.spec.ts' ! -name 'client.ts' \\)` --outdir=dist --platform=node --format=cjs --keep-names --target=esnext",
    "build:browser": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=esnext --outfile=dist/client.js",
    "build": "npm run lint && npm test && rm -rf dist && tsc && npm run build:min && npm run build:browser",
    "lint": "eslint ./src && prettier --check ./src",
    "format": "eslint ./src --fix && prettier --write ./src"
  },
  "author": "Elson Correia",
  "license": "BSD-3-Clause",
  "keywords": [
    "html",
    "web components",
    "javascript",
    "html renderer",
    "web"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "core-js": "^3.31.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@beforesemicolon/html-parser": "^0.2.5"
  }
}
